}

/* 动画 */
.transition {
  transition: all 0.3s ease;
}

.transition-fast {
  transition: all 0.15s ease;
}

.transition-slow {
  transition: all 0.5s ease;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .container {
    padding: 20rpx;
  }
  
  .card {
    padding: 30rpx;
    margin-bottom: 15rpx;
  }
  
  .btn {
    padding: 18rpx 36rpx;
    font-size: 26rpx;
  }
  
  .btn-large {
    padding: 25rpx 50rpx;
    font-size: 30rpx;
  }
}