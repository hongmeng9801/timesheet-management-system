/* 加载组件样式 */

.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.loading-content {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.8);
  border-radius: 12rpx;
  padding: 40rpx;
  min-width: 200rpx;
  min-height: 120rpx;
}

.loading-text {
  color: #ffffff;
  font-size: 28rpx;
  margin-top: 20rpx;
  text-align: center;
}

/* Spinner 动画 */
.loading-spinner {
  display: flex;
  align-items: center;
  justify-content: center;
}

.spinner-border {
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-small .spinner-border {
  width: 40rpx;
  height: 40rpx;
}

.loading-medium .spinner-border {
  width: 60rpx;
  height: 60rpx;
}

.loading-large .spinner-border {
  width: 80rpx;
  height: 80rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Dots 动画 */
.loading-dots {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.dot {
  background-color: #ffffff;
  border-radius: 50%;
  animation: bounce 1.4s ease-in-out infinite both;
}

.loading-small .dot {
  width: 12rpx;
  height: 12rpx;
}

.loading-medium .dot {
  width: 16rpx;
  height: 16rpx;
}

.loading-large .dot {
  width: 20rpx;
  height: 20rpx;
}

.dot1 {
  animation-delay: -0.32s;
}

.dot2 {
  animation-delay: -0.16s;
}

.dot3 {
  animation-delay: 0s;
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

/* Pulse 动画 */
.loading-pulse {
  display: flex;
  align-items: center;
  justify-content: center;
}

.pulse-circle {
  background-color: #ffffff;
  border-radius: 50%;
  animation: pulse 1.5s ease-in-out infinite;
}

.loading-small .pulse-circle {
  width: 40rpx;
  height: 40rpx;
}

.loading-medium .pulse-circle {
  width: 60rpx;
  height: 60rpx;
}

.loading-large .pulse-circle {
  width: 80rpx;
  height: 80rpx;
}

@keyframes pulse {
  0% {
    transform: scale(0);
    opacity: 1;
  }
  100% {
    transform: scale(1);
    opacity: 0;
  }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .loading-content {
    padding: 30rpx;
    min-width: 160rpx;
    min-height: 100rpx;
  }
  
  .loading-text {
    font-size: 24rpx;
    margin-top: 16rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .loading-content {
    background: rgba(255, 255, 255, 0.9);
  }
  
  .loading-text {
    color: #333333;
  }
  
  .spinner-border {
    border: 4rpx solid rgba(0, 0, 0, 0.3);
    border-top: 4rpx solid #333333;
  }
  
  .dot {
    background-color: #333333;
  }
  
  .pulse-circle {
    background-color: #333333;
  }
}

/* 无障碍支持 */
@media (prefers-reduced-motion: reduce) {
  .spinner-border,
  .dot,
  .pulse-circle {
    animation: none;
  }
  
  .loading-spinner::after {
    content: '加载中';
    position: absolute;
    left: -9999px;
  }
}