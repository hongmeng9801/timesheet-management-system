[build]
  publish = "dist"
  command = "npm run build"

# 禁用Netlify默认安全策略
[[headers]]
  for = "/*"
  [headers.values]
    # 基本缓存控制
    Cache-Control = "public, max-age=0, must-revalidate"

# 静态资源缓存优化
[[headers]]
  for = "/assets/*"
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"

# SPA路由重定向
[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200
  force = false

# API代理重定向已移除以提高安全性

[build.environment]
  NODE_VERSION = "18"
  NPM_FLAGS = "--production=false"
  NODE_ENV = "production"
  
# 构建优化
[build.processing]
  skip_processing = false
[build.processing.css]
  bundle = true
  minify = true
[build.processing.js]
  bundle = true
  minify = true
[build.processing.html]
  pretty_urls = true

# 国内CDN优化设置
[context.production]
  command = "npm run build"
  
[context.deploy-preview]
  command = "npm run build"
  
[context.branch-deploy]
  command = "npm run build"